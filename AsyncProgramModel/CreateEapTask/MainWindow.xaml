<Window
    x:Class="CreateEapTask.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CreateEapTask"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Performing Concurrent Downloads"
    Width="525"
    Height="350"
    mc:Ignorable="d">
    <Grid>
        <Button
            Name="butDownloadFiles"
            Width="225"
            Height="46"
            Margin="12,12,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="butDownloadFiles_Click"
            Content="Start DownLoading Files" />
        <ListBox Name="lstStatus" Margin="12,64,15,12" />
        <Button
            Name="butCancel"
            Width="166"
            Height="46"
            Margin="325,12,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="butCancel_Click"
            Content="Cancel Downloads"
            IsEnabled="False" />
    </Grid>
</Window>
