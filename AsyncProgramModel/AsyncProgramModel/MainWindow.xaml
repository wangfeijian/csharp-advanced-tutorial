<Window
    x:Class="AsyncProgramModel.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AsyncProgramModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Performing Concurrent Read Operations"
    Width="525"
    Height="350"
    mc:Ignorable="d">
    <Grid>
        <Button
            Name="butConcatTextFiles"
            Width="190"
            Height="43"
            Margin="12,12,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="butConCatTextFiles_Click"
            Content="Concatenate Text Files" />
        <TextBox
            Name="txtAllText"
            Height="205"
            Margin="12,61,12,0"
            VerticalAlignment="Top"
            AcceptsReturn="True" />
        <ProgressBar
            Name="pgbFiles"
            Width="479"
            Height="27"
            Margin="12,272,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
    </Grid>
</Window>
