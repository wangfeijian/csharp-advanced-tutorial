<UserControl
    x:Class="SosoVisionTool.Views.ToolControlBoxView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SosoVisionTool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="ToolControl_Loaded"
    mc:Ignorable="d">
    <GroupBox FontSize="18" Header="工具箱">
        <StackPanel
            x:Name="StackPanelToolList"
            Margin="2"
            AllowDrop="True"
            DragEnter="ToolStackPanel_OnDragEnter"
            Drop="ToolStackPanel_OnDrop"
            PreviewMouseLeftButtonDown="ToolStackPanel_OnPreviewMouseLeftButtonDown"
            PreviewMouseLeftButtonUp="ToolStackPanel_OnMouseLeftButtonUp"
            PreviewMouseMove="ToolStackPanel_OnPreviewMouseMove" />
    </GroupBox>
</UserControl>
