                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Binoculars" />
                        <TextBlock Margin="8,0,0,0" Text="使用方法" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

