<Window
    x:Class="AutoMationFrameWork.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AutoMationFrameWork.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="MainWin"
    Width="1000"
    Height="700"
    Background="{DynamicResource MaterialDesignPaper}"
    Loaded="MainWindow_Loaded"
    ResizeMode="CanResizeWithGrip"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    Unloaded="MainWindow_Unloaded"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.DataContext>
        <Binding Path="Main" Source="{StaticResource Locator}" />
    </Window.DataContext>
    <Border BorderBrush="#D6D6D6" BorderThickness="1">
        <Grid x:Name="Bg" PreviewMouseLeftButtonDown="BG_PreviewMouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid
                x:Name="NavPnl"
                Width="65"
                HorizontalAlignment="Left">
                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                    <StackPanel Name="TogglePanel" Background="#F5F5F5">
                        <Grid Height="60">
                            <TextBlock
                                Grid.Column="0"
                                Margin="73,0,0,0"
                                Background="Transparent"
                                FontSize="22"
                                Style="{StaticResource FontStyle}"
                                Text="{StaticResource Menu}">
                                <TextBlock.Effect>
                                    <DropShadowEffect
                                        BlurRadius="10"
                                        Direction="-90"
                                        ShadowDepth="1"
                                        Color="Black" />
                                </TextBlock.Effect>
                            </TextBlock>
                            <ToggleButton
                                x:Name="TgBtn"
                                Grid.Column="0"
                                Width="30"
                                Height="30"
                                Margin="18,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                BorderThickness="0"
                                Style="{StaticResource TbStyle}">
                                <ToggleButton.Background>
                                    <ImageBrush ImageSource="../Resources/Image/tgBtn_default.png" Stretch="None" />
                                </ToggleButton.Background>
                                <ToggleButton.Triggers>
                                    <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                                        <BeginStoryboard>
                                            <Storyboard x:Name="HideStackPanel">
                                                <DoubleAnimation
                                                    BeginTime="0:0:0"
                                                    Storyboard.TargetName="NavPnl"
                                                    Storyboard.TargetProperty="Width"
                                                    From="230"
                                                    To="65"
                                                    Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="ToggleButton.Checked">
                                        <BeginStoryboard>
                                            <Storyboard x:Name="ShowStackPanel">
                                                <DoubleAnimation
                                                    BeginTime="0:0:0"
                                                    Storyboard.TargetName="NavPnl"
                                                    Storyboard.TargetProperty="Width"
                                                    From="65"
                                                    To="230"
                                                    Duration="0:0:0.3" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </ToggleButton.Triggers>
                            </ToggleButton>
                        </Grid>
                        <ListView
                            x:Name="Lv"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            PreviewMouseWheel="LV_OnPreviewMouseWheel"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListViewItem
                                Name="MainBtn"
                                Margin="0,0,0,15"
                                HorizontalAlignment="Left"
                                MouseEnter="ListViewItem_MouseEnter"
                                Selected="Button_OnClick"
                                Tag="Main">
                                <StackPanel Width="230" Orientation="Horizontal">
                                    <Label
                                        Content="&#xe7ed;"
                                        Foreground="#27d0d8"
                                        Style="{StaticResource LabelListViewStyle}" />
                                    <TextBlock
                                        Margin="25,0,0,0"
                                        Style="{StaticResource FontStyle}"
                                        Text="{StaticResource HomePage}" />
                                </StackPanel>
                                <ListViewItem.ToolTip>
                                    <ToolTip
                                        x:Name="tt_home"
                                        Content="{StaticResource HomePage}"
                                        Style="{StaticResource TtStyle}" />
                                </ListViewItem.ToolTip>
                            </ListViewItem>
                            <ListViewItem
                                Name="StartButton"
                                Margin="0,0,0,15"
                                HorizontalAlignment="Left"
                                IsEnabled="True"
                                MouseEnter="ListViewItem_MouseEnter"
                                Selected="StartButton_OnSelected">
                                <StackPanel Width="230" Orientation="Horizontal">
                                    <Label
                                        Name="StartLabel"
                                        Content="&#xe65f;"
                                        Foreground="#006569"
                                        Style="{StaticResource LabelListViewStyle}" />
                                    <TextBlock
                                        Margin="25,0,0,0"
                                        Style="{StaticResource FontStyle}"
                                        Text="{StaticResource Start}" />
                                </StackPanel>
                                <ListViewItem.ToolTip>
                                    <ToolTip
                                        x:Name="tt_start"
                                        Content="{StaticResource Start}"
                                        Style="{StaticResource TtStyle}" />
                                </ListViewItem.ToolTip>
                            </ListViewItem>
                            <ListViewItem
                                Name="PauseButton"
                                Margin="0,0,0,15"
                                HorizontalAlignment="Left"
                                IsEnabled="False"
                                MouseEnter="ListViewItem_MouseEnter"
                                Selected="PauseButton_OnSelected">
                                <StackPanel Width="230" Orientation="Horizontal">
                                    <Label
                                        Name="PauseLabel"
                                        Content="&#xe606;"
                                        Foreground="#c4c4c7"
                                        Style="{StaticResource LabelListViewStyle}" />
                                    <TextBlock
                                        Margin="25,0,0,0"
                                        Style="{StaticResource FontStyle}"
                                        Text="{StaticResource Pause}" />
                                </StackPanel>
                                <ListViewItem.ToolTip>
                                    <ToolTip
                                        x:Name="tt_pause"
                                        Content="{StaticResource Pause}"
                                        Style="{StaticResource TtStyle}" />
                                </ListViewItem.ToolTip>
                            </ListViewItem>
                            <ListViewItem
                                Name="StopButton"
                                Margin="0,0,0,15"
                                HorizontalAlignment="Left"
                                IsEnabled="False"
                                MouseEnter="ListViewItem_MouseEnter"
                                Selected="StopButton_OnSelected">
                                <StackPanel Width="230" Orientation="Horizontal">
                                    <Label
                                        Name="StopLabel"
                                        Content="&#xec6d;"
                                        Foreground="#c4c4c7"
                                        Style="{StaticResource LabelListViewStyle}" />
                                    <TextBlock
                                        Margin="25,0,0,0"
                                        Style="{StaticResource FontStyle}"
                                        Text="{StaticResource Stop}" />
                                </StackPanel>
                                <ListViewItem.ToolTip>
                                    <ToolTip
                                        x:Name="tt_stop"
                                        Content="{StaticResource Stop}"
                                        Style="{StaticResource TtStyle}" />
                                </ListViewItem.ToolTip>
                            </ListViewItem>
                            <ListViewItem
                                Name="SetBtn"
                                Margin="0,0,0,15"
                                HorizontalAlignment="Left"
                                MouseEnter="ListViewItem_MouseEnter"
                                Selected="Button_OnClick"
                                Tag="Set">
                                <StackPanel Width="230" Orientation="Horizontal">
                                    <Label
                                        Content="&#xe63a;"
                                        Foreground="#50bc93"
                                        Style="{StaticResource LabelListViewStyle}" />
                                    <TextBlock
                                        Margin="25,0,0,0"
                                        Style="{StaticResource FontStyle}"
                                        Text="{StaticResource Setting}" />
                                </StackPanel>
                                <ListViewItem.ToolTip>
                                    <ToolTip
                                        x:Name="tt_settings"
                                        Content="{StaticResource Setting}"
                                        Style="{StaticResource TtStyle}" />
                                </ListViewItem.ToolTip>
                            </ListViewItem>
                            <ListViewItem
                                Margin="0,0,0,15"
                                HorizontalAlignment="Left"
                                MouseEnter="ListViewItem_MouseEnter"
                                Selected="Button_OnClick"
                                Tag="Camera">
                                <StackPanel Width="230" Orientation="Horizontal">
                                    <Label
                                        Content="&#xe624;"
                                        Foreground="#F39D3F"
                                        Style="{StaticResource LabelListViewStyle}" />
                                    <TextBlock
                                        Margin="25,0,0,0"
                                        Style="{StaticResource FontStyle}"
                                        Text="{StaticResource Vision}" />
                                </StackPanel>
                                <ListViewItem.ToolTip>
                                    <ToolTip
                                        x:Name="tt_camera"
                                        Content="{StaticResource Vision}"
                                        Style="{StaticResource TtStyle}" />
                                </ListViewItem.ToolTip>
                            </ListViewItem>
                            <ListViewItem
                                Margin="0,0,0,15"
                                HorizontalAlignment="Left"
                                MouseEnter="ListViewItem_MouseEnter"
                                Selected="Button_OnClick"
                                Tag="Table">
                                <StackPanel Width="230" Orientation="Horizontal">
                                    <Label
                                        Content="&#xe615;"
                                        Foreground="#626262"
                                        Style="{StaticResource LabelListViewStyle}" />
                                    <TextBlock
                                        Margin="25,0,0,0"
                                        Style="{StaticResource FontStyle}"
                                        Text="{StaticResource Statistics}" />
                                </StackPanel>
                                <ListViewItem.ToolTip>
                                    <ToolTip
                                        x:Name="tt_table"
                                        Content="{StaticResource Statistics}"
                                        Style="{StaticResource TtStyle}" />
                                </ListViewItem.ToolTip>
                            </ListViewItem>
                            <ListViewItem
                                Margin="0,0,0,15"
                                HorizontalAlignment="Left"
                                MouseEnter="ListViewItem_MouseEnter"
                                Selected="Button_OnClick"
                                Tag="Alarm">
                                <StackPanel Width="230" Orientation="Horizontal">
                                    <Label
                                        Content="&#xe636;"
                                        Foreground="#f29600"
                                        Style="{StaticResource LabelListViewStyle}" />
                                    <TextBlock
                                        Margin="25,0,0,0"
                                        Style="{StaticResource FontStyle}"
                                        Text="{StaticResource Alarm}" />
                                </StackPanel>
                                <ListViewItem.ToolTip>
                                    <ToolTip
                                        x:Name="tt_alarm"
                                        Content="{StaticResource Alarm}"
                                        Style="{StaticResource TtStyle}" />
                                </ListViewItem.ToolTip>
                            </ListViewItem>
                            <ListViewItem
                                Margin="0,0,0,15"
                                HorizontalAlignment="Left"
                                MouseEnter="ListViewItem_MouseEnter"
                                Selected="Button_OnClick"
                                Tag="User">
                                <StackPanel Width="230" Orientation="Horizontal">
                                    <Label
                                        Content="&#xe66d;"
                                        Foreground="#141134"
                                        Style="{StaticResource LabelListViewStyle}" />
                                    <TextBlock
                                        Margin="25,0,0,0"
                                        Style="{StaticResource FontStyle}"
                                        Text="{StaticResource User}" />
                                </StackPanel>
                                <ListViewItem.ToolTip>
                                    <ToolTip
                                        x:Name="tt_user"
                                        Content="{StaticResource User}"
                                        Style="{StaticResource TtStyle}" />
                                </ListViewItem.ToolTip>
                            </ListViewItem>
                            <ListViewItem
                                Margin="0,0,0,15"
                                HorizontalAlignment="Left"
                                MouseEnter="ListViewItem_MouseEnter"
                                Selected="SelectLanguage">
                                <StackPanel Width="230" Orientation="Horizontal">
                                    <Label
                                        Content="{StaticResource LangTypeIcon}"
                                        Foreground="#16c2c2"
                                        Style="{StaticResource LabelListViewStyle}" />
                                    <TextBlock
                                        Margin="25,0,0,0"
                                        Style="{StaticResource FontStyle}"
                                        Text="{StaticResource LangType}" />
                                </StackPanel>
                                <ListViewItem.ToolTip>
                                    <ToolTip
                                        x:Name="tt_lang"
                                        Content="{StaticResource LangType}"
                                        Style="{StaticResource TtStyle}" />
                                </ListViewItem.ToolTip>
                            </ListViewItem>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ListViewItem}">
                                                <Border
                                                    x:Name="Bd"
                                                    Height="50"
                                                    Padding="{TemplateBinding Padding}"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    SnapsToDevicePixels="True">
                                                    <ContentPresenter
                                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <MultiTrigger>
                                                        <MultiTrigger.Conditions>
                                                            <Condition Property="IsMouseOver" Value="True" />
                                                        </MultiTrigger.Conditions>
                                                        <Setter TargetName="Bd" Property="Background" Value="#404D5B" />
                                                        <Setter TargetName="Bd" Property="BorderBrush" Value="#404D5B" />
                                                    </MultiTrigger>
                                                    <MultiTrigger>
                                                        <MultiTrigger.Conditions>
                                                            <Condition Property="Selector.IsSelected" Value="True" />
                                                        </MultiTrigger.Conditions>
                                                        <Setter TargetName="Bd" Property="Background" Value="#BBBCC2" />
                                                        <Setter TargetName="Bd" Property="BorderBrush" Value="#BBBCC2" />
                                                    </MultiTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
