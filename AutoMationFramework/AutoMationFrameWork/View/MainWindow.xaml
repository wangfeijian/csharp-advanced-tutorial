            <Grid Name="MainGrid" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border
                    Name="BorderTitle"
                    Background="#F5F5F5"
                    BorderBrush="#D6D6D6"
                    BorderThickness="1,0,0,1"
                    MouseLeftButtonDown="BorderTitle_OnMouseDown">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Name="MinBtn"
                            Content="&#xe650;"
                            Grid.Column="1"
                            Height="25"
                            Margin="5,2"
                            Click="WindowsState_OnClick"
                            FontSize="15"
                            Foreground="#666666"
                            Template="{StaticResource ButtonTemplate}" />
                        <Button
                            Name="MaxBtn"
                            Content="&#xe65b;"
                            Grid.Column="2"
                            Height="25"
                            Margin="5,2"
                            Click="WindowsState_OnClick"
                            FontSize="15"
                            Foreground="#666666"
                            Template="{StaticResource ButtonTemplate}" />
                        <Button
                            Name="CloseBtn"
                            Content="&#xe639;"
                            Grid.Column="3"
                            Height="25"
                            Margin="5,2,10,2"
                            Click="WindowsState_OnClick"
                            FontSize="15"
                            Foreground="#666666"
                            Template="{StaticResource ButtonTemplate}" />
                    </Grid>
                </Border>
                <local:MainControl x:Name="MainUi" Grid.Row="1" />
                <local:SettingControl
                    x:Name="SetUi"
                    Grid.Row="1"
                    Visibility="Collapsed" />
                <local:CameraControl
                    x:Name="CameraUi"
                    Grid.Row="1"
                    Visibility="Collapsed" />
                <local:TableCusControl
                    x:Name="TableUi"
                    Grid.Row="1"
