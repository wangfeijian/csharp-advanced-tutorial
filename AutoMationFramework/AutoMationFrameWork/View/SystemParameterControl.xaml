<UserControl
    x:Class="AutoMationFrameWork.View.SystemParameterControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AutoMationFrameWork.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="610"
    d:DesignWidth="950"
    mc:Ignorable="d">
    <Grid Margin="5" Background="#50bc93">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <DataGrid
                    Name="IoInputDatGrid"
                    ItemsSource="{Binding}"
                    Style="{StaticResource DataGridStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding KeyValue}"
                            ElementStyle="{StaticResource DataGridContentStyle}"
                            Header="键值"
                            HeaderStyle="{StaticResource DataGridHeadStyle}" />
                        <DataGridTextColumn
                            Width="100"
                            Binding="{Binding CurrentValue}"
                            ElementStyle="{StaticResource DataGridContentStyle}"
                            Header="当前值"
                            HeaderStyle="{StaticResource DataGridHeadStyle}" />
                        <DataGridTextColumn
                            Width="70"
                            Binding="{Binding Unit}"
                            ElementStyle="{StaticResource DataGridContentStyle}"
                            Header="单位"
                            HeaderStyle="{StaticResource DataGridHeadStyle}" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding ParamDesc}"
                            ElementStyle="{StaticResource DataGridContentStyle}"
                            Header="参数描述"
                            HeaderStyle="{StaticResource DataGridHeadStyle}" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding EnglishDesc}"
                            ElementStyle="{StaticResource DataGridContentStyle}"
                            Header="翻译"
                            HeaderStyle="{StaticResource DataGridHeadStyle}" />
                        <DataGridTextColumn
                            Width="80"
                            Binding="{Binding MinValue}"
                            ElementStyle="{StaticResource DataGridContentStyle}"
                            Header="最小值"
                            HeaderStyle="{StaticResource DataGridHeadStyle}" />
                        <DataGridTextColumn
                            Width="80"
                            Binding="{Binding MaxValue}"
                            ElementStyle="{StaticResource DataGridContentStyle}"
                            Header="最大值"
                            HeaderStyle="{StaticResource DataGridHeadStyle}" />
                        <DataGridTextColumn
                            Width="70"
                            Binding="{Binding Authority}"
                            ElementStyle="{StaticResource DataGridContentStyle}"
                            Header="权限"
                            HeaderStyle="{StaticResource DataGridHeadStyle}" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </ScrollViewer>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                Content="保存文件"
                Grid.Column="0"
                Margin="2.5,5,5,2.5"
                materialDesign:ButtonAssist.CornerRadius="5"
                Background="#899DC0"
                Style="{StaticResource MaterialDesignRaisedButton}" />
            <Button
                Content="另存为"
                Grid.Column="1"
                Margin="2.5,5,5,2.5"
                materialDesign:ButtonAssist.CornerRadius="5"
                Background="#899DC0"
                Style="{StaticResource MaterialDesignRaisedButton}" />
            <Button
                Content="保存默认"
                Grid.Column="2"
                Margin="2.5,5,5,2.5"
                materialDesign:ButtonAssist.CornerRadius="5"
                Background="#899DC0"
                Style="{StaticResource MaterialDesignRaisedButton}" />
            <Button
                Content="试用参数"
                Grid.Column="3"
                Margin="2.5,5,5,2.5"
                materialDesign:ButtonAssist.CornerRadius="5"
                Background="#899DC0"
                Style="{StaticResource MaterialDesignRaisedButton}" />
            <Button
                Content="选择此配置"
                Grid.Column="4"
                Margin="2.5,5,5,2.5"
                materialDesign:ButtonAssist.CornerRadius="5"
                Background="#899DC0"
                Style="{StaticResource MaterialDesignRaisedButton}" />
            <Button
                Content="还原上一次"
                Grid.Column="5"
                Margin="2.5,5,5,2.5"
                materialDesign:ButtonAssist.CornerRadius="5"
                Background="#899DC0"
                Style="{StaticResource MaterialDesignRaisedButton}" />
            <Button
                Content="恢复默认"
                Grid.Column="6"
                Margin="2.5,5,5,2.5"
                materialDesign:ButtonAssist.CornerRadius="5"
                Background="#899DC0"
                Style="{StaticResource MaterialDesignRaisedButton}" />
        </Grid>
    </Grid>
</UserControl>
